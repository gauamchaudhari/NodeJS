<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <!-- Container for centering the form -->
    <div class="flex justify-center items-center h-screen">
      <!-- Card container -->
      <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-lg">
        <!-- Title -->
        <h2 class="text-2xl font-semibold text-center mb-6">Login</h2>
        
        <!-- Login form -->
        <form action="/auth/login" method="POST" class="space-y-4">
          <!-- Email input field -->
          <div>
            <label for="email" class="block text-lg font-semibold">Email</label>
            <input type="email" name="email" id="email" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required />
          </div>
          
          <!-- Password input field -->
          <div>
            <label for="password" class="block text-lg font-semibold">Password</label>
            <input type="password" name="password" id="password" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required />
          </div>
          
          <!-- Submit button -->
          <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Login</button>
        </form>

        <!-- Optional: Forgot password link -->
        <div class="text-center mt-4">
          <a href="#" class="text-sm text-blue-500 hover:underline">Forgot Password?</a>
        </div>
      </div>
    </div>
  </body>
</html>
